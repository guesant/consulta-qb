{
  "$id": "https://guesant.github.io/consulta-qb/schemas/0.0.0/query.schema.json",

  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "$ref": "#/$defs/ref_query",

  "$defs": {
    "select_column": {
      "oneOf": [
        {
          "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/expression.schema.json#/$defs/ref_value"
        },

        {
          "type": "object",

          "properties": {
            "value": {
              "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/expression.schema.json#/$defs/ref_value"
            },

            "as": {
              "type": "string"
            }
          },

          "additionalProperties": false
        }
      ]
    },

    "select": {
      "type": "object",

      "properties": {
        "type": {
          "type": "string",
          "enum": ["select"],
          "default": "select"
        },

        "from": {
          "oneOf": [
            {
              "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/constraints.schema.json#/$defs/table_name"
            },
            {
              "type": "object",
              "properties": {
                "table": {
                  "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/constraints.schema.json#/$defs/table_name"
                },
                "as": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": ["table"]
            }
          ]
        },

        "columns": {
          "type": "array",

          "items": {
            "$ref": "#/$defs/select_column"
          },

          "minItems": 1
        },

        "joins": {
          "type": "array",

          "items": {
            "type": "object",

            "properties": {
              "mode": {
                "type": "string",
                "enum": ["inner", "left", "right", "full"]
              },

              "table": {
                "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/constraints.schema.json#/$defs/table_name"
              },

              "as": {
                "type": "string"
              },

              "on": {
                "anyOf": [
                  {
                    "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/expression.schema.json#/$defs/ref_expression"
                  }
                ]
              }
            },
            "additionalProperties": false,
            "required": ["mode", "table", "on"]
          }
        },

        "where": {
          "anyOf": [
            {
              "$ref": "https://guesant.github.io/consulta-qb/schemas/0.0.0/expression.schema.json#/$defs/ref_expression"
            }
          ]
        }
      },

      "additionalProperties": false,

      "required": ["columns", "from"]
    },

    "ref_select": {
      "type": "object",

      "properties": {
        "select": {
          "$ref": "#/$defs/select"
        }
      },

      "additionalProperties": false,

      "required": ["select"]
    },

    "query": {
      "anyOf": [
        {
          "$ref": "#/$defs/ref_select"
        }
      ]
    },

    "ref_query": {
      "$ref": "#/$defs/query"
    }
  }
}
